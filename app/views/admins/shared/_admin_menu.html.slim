    h3.aside-title = t("admin.aside.stations")

    li.aside-list = link_to admins_event_stations_path(event, group: "access")
      = fa_icon "exchange"
      = t("admin.aside.access_stations")
    li.aside-list = link_to admins_event_stations_path(event, group: "monetary")
      = fa_icon "money"
      = t("admin.aside.monetary_stations")
