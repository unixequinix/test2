      = fa_icon "google"
      = t("admin.aside.glownet_stations")
    li.aside-list = link_to admins_event_stations_path(event, group: "touchpoint")
      = fa_icon "bullseye"
      = t("admin.aside.touchpoint_stations")

    h3.aside-title = t("admin.aside.crm")

    li.aside-list = link_to admins_event_customers_path(event) do
      = fa_icon "users"
      = t("admin.aside.customers")
    li.aside-list = link_to admins_event_orders_path(event) do
      = fa_icon "list"
      = t("admin.aside.orders")
    li.aside-list = link_to admins_event_refunds_path(event) do
      = fa_icon "reply"
      = t("admin.aside.refunds")
      
    h3.aside-title = t("admin.aside.devices")
    
    li.aside-list = link_to admins_event_devices_path(event) do
      = fa_icon "mobile"
      = t("admin.aside.devices")

    h3.aside-title = t("admin.aside.inconsistencies")
    li.aside-list = link_to real_admins_event_inconsistencies_path(event) do
      = fa_icon "list"
      = t("admin.aside.real")

    li.aside-list = link_to missing_admins_event_inconsistencies_path(event) do
      = fa_icon "list"
      = t("admin.aside.missing")

    li.aside-list = link_to resolvable_admins_event_inconsistencies_path(event) do
      = fa_icon "list"
      = t("admin.aside.resolvable")

    h3.aside-title = t("admin.aside.transactions")

    - Transaction::TYPES.each do |type|
      li.aside-list = link_to admins_event_transactions_path(event, type: type) do
        = fa_icon "list"
        = t("admin.aside.#{type}_transactions")

    li.mobile-sign-out
      = link_to t("admin.aside.sign_out"), destroy_admin_session_path, method: :delete
